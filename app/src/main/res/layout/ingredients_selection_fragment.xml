<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.textfield.TextInputLayout
        app:startIconDrawable="@drawable/ic_baseline_search_24"
        app:endIconDrawable="@drawable/ic_baseline_clear_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="clear_text"
        android:id="@+id/ingredient_search_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:hint="Find an ingredient..."
        android:textColorHint="@color/black"
        app:hintTextColor="@color/purpleNightPrimary"

        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/black"
        android:paddingHorizontal="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/ingredient_search_text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:id="@+id/ingredient_search_btn_ctnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingredient_search_field"
        app:layout_constraintLeft_toLeftOf="@id/ingredient_search_field"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/ingredient_search_btn"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/search_btn"
            app:layout_constraintTop_toBottomOf="@id/ingredient_search_field"
            tools:ignore="MissingConstraints"/>
        <Button
            android:id="@+id/ingredient_clear_btn"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/clear_btn"
            app:layout_constraintTop_toBottomOf="@id/ingredient_search_field"
            tools:ignore="MissingConstraints"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingredient_search_btn_ctnr">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_ingredients"/>
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loading_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_marginTop="32dp"
            android:layout_gravity="top|center_horizontal"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/tv_search_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorError"
            android:visibility="invisible"
            android:text="@string/search_error" />
    </FrameLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_ingredients_btn"
        android:id="@+id/add_meal_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>